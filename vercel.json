{
  "version": 2,
  "buildCommand": "yarn workspace @slowpost/client build && mkdir -p dist && cp -R packages/client/.next dist/.next",
  "outputDirectory": "dist",
  "builds": [
    { "src": "api/**/*.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.ts" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "packages/client/$1" }
  ]
}
