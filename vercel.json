{
  "version": 2,
  "buildCommand": "yarn build && rm -rf .next && cp -R packages/client/.next .next",
  "outputDirectory": ".next",
  "builds": [
    { "src": "packages/client/package.json", "use": "@vercel/next" },
    { "src": "api/**/*.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.ts" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "packages/client/$1" }
  ]
}
