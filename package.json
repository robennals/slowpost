{
  "name": "slowpost",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "node scripts/dev.js",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest run",
    "test:e2e": "playwright test --project=chromium",
    "test:e2e:all": "playwright test",
    "test:e2e:slow": "PLAYWRIGHT_E2E_SHOW_BROWSER=1 PLAYWRIGHT_E2E_SLOWMO=500 playwright test --project=chromium",
    "typecheck": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test:storybook": "node scripts/run-storybook-tests.mjs",
    "test:storybook:browser": "node scripts/run-storybook-tests.mjs --env browser",
    "test:storybook:jsdom": "node scripts/run-storybook-tests.mjs --env jsdom",
    "deploy": "node scripts/deploy-to-vercel.js"
  },
  "dependencies": {
    "@libsql/client": "^0.15.15",
    "@vercel/blob": "^0.24.1",
    "next": "^14.2.0",
    "postmark": "^4.0.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.1",
    "@storybook/addon-essentials": "^8.0.0",
    "@storybook/addon-interactions": "^8.0.0",
    "@storybook/react": "^8.0.0",
    "@storybook/react-vite": "^8.0.0",
    "@storybook/test": "^8.6.14",
    "@storybook/test-runner": "^0.18.1",
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.2.0",
    "jsdom": "^27.0.0",
    "storybook": "^8.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.1.9",
    "vitest": "^1.6.0"
  },
  "packageManager": "yarn@1.22.22"
}
